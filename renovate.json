{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "packageRules": [
    {
      "groupName": "All Dependencies",
      "groupSlug": "minor-patch",
      "matchPackagePatterns": ["*"],
      "matchUpdateTypes": ["minor", "patch"]
    }
  ],

  "npm": {
    "fileMatch": [
      "/package.json",
      "/apps/*/package.json",
      "/examples/*/package.json",
      "/packages/*/package.json"
    ]
  },
  "ignoreDeps": [
    "@types/react",
    "@types/react-dom",
    "rehype-pretty-code",
    "flexsearch",
    "@types/node"
  ]
}
