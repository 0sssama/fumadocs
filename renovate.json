{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "ignorePresets": [":ignoreModulesAndTests"],
  "packageRules": [
    {
      "groupName": "All Dependencies",
      "groupSlug": "minor-patch",
      "matchPackagePatterns": ["*"],
      "matchUpdateTypes": ["minor", "patch"]
    }
  ],
  "ignoreDeps": [
    "@types/react",
    "@types/react-dom",
    "@types/hast",
    "@types/mdast",
    "flexsearch",
    "@types/node"
  ]
}
